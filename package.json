{
  "name": "chartiq-react-app",
  "version": "8.4.0",
  "description": "ChartIQ's full featured charting application written in ReactJS",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config=webpack.config.js --env.production",
    "start": "npm run watch -- --host=127.0.0.1 --disable-host-check=true",
    "format": "prettier --write src/**/*.{js,jsx} react-components/**/*.{js,jsx} tests/**/*.js --config .prettierrc",
    "prepublish-clean-components": "npm run clean --prefix=react-components",
    "prepublish-public": "npm run prepublish-clean-components && npm run prepublish-get-source && npm run prepublish-copy && npm run prepublish-copy-components && npm run prepublish-updates && npm run prepublish-git-add",
    "prepublish-get-source": "rm -rf public_repo &&  git clone -n https://github.com/ChartIQ/chartiq-react-app public_repo",
    "prepublish-copy": "cp -r ./.github public src .gitignore .prettierignore .prettierrc .babelrc index.html README.md webpack.config.js public_repo/ && rm -rf public_repo/.github/workflows",
    "prepublish-copy-components": "cp -r react-components public_repo && public_repo/react-components/PUBLISHING.md",
    "prepublish-updates": "sed '/\"prepublish-/d;' package.json > public_repo/package.json",
    "prepublish-git-add": "cd public_repo && git add . && cd ..",
    "watch": "webpack-dev-server --inline --config=webpack.config.js --watch=true"
  },
  "keywords": [
    "react",
    "charts",
    "charting",
    "chartiq",
    "component",
    "library"
  ],
  "author": "ChartIQ",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-react": "^7.14.5",
    "@open-wc/webpack-import-meta-loader": "^0.4.7",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5.2.7",
    "extract-css-chunks-webpack-plugin": "^4.9.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "node-sass": "^6.0.1",
    "prettier": "2.5.1",
    "resolve-url-loader": "^3.1.4",
    "sass-loader": "^10.2.0",
    "url-loader": "^4.1.1",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@babel/preset-env": "^7.14.8",
    "@chartiq/react-components": "file:./react-components",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-router-dom": "^5.2.0"
  }
}
